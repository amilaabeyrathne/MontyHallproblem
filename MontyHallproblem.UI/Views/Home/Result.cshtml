@model MontyHallproblem.Models.OutPutModel
@{
    ViewBag.Title = "Result";
}

<div class="jumbotron">
    <h1>Monty Hall Problem</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Simulation result</h2>
        <div>
            <table id="table" class="table">
                <thead>
                    <tr>
                        <th scope="col">Number of Simulations</th>
                        <th scope="col">Wins</th>
                        <th scope="col">Losses</th>
                        <th scope="col">Door Status (Stay/Change)</th>
                    </tr>
                </thead>
                <tr class="form-group">
                    <td>
                        @Html.DisplayTextFor(m => m.numberOfSimulations)
                    </td>
                    <td>
                        @Html.DisplayTextFor(m => m.NumberOfWins)
                    </td>
                    <td>
                        @Html.DisplayTextFor(m => m.NumberOfLosses)
                    </td>
                    <td>
                        @Html.DisplayTextFor(m => m.StayResult)
                    </td>
                </tr>

            </table>
        </div>
    </div>
    <div class="col-md-6">
        <a href='@Url.Action("Index", "Home")' class="btn btn-primary" style="float:right"> < Run Again</a>
    </div>
</div>